<p id="notice"><%= notice %></p>

<h1>Urls</h1>

<table>
  <thead>
    <tr>
      <th>Short</th>
      <th>Long</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr data-testid="url-link">
        <td data-testid="url-link-short-url">
          <%= link_to url.id, redirect_path(url) %>
        </td>
        <td data-testid="url-link-long-url"><%= url.long %></td>
        <td data-testid="url-link-action-show"><%= link_to 'Show', url %></td>
        <td data-testid="url-link-action-edit"><%= link_to 'Edit', edit_url_path(url) %></td>
        <td data-testid="url-link-action-destroy"><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_url_path %>
